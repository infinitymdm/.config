keybind = ctrl+alt+t=new_tab
keybind = ctrl+tab=next_tab
keybind = super+ctrl+tab=toggle_tab_overview
keybind = ctrl+alt+m=new_split:left
keybind = ctrl+alt+comma=new_split:down
